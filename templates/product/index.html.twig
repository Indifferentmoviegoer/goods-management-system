{% extends 'base.html.twig' %}

{% block title %}Импорт товаров{% endblock %}

{% block body %}
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-8">
                {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                <div class="form-group">
                    {{ form_label(form.uploadedFile) }}
                    {{ form_widget(form.uploadedFile) }}
                    {{ form_errors(form.uploadedFile) }}
                </div>
                <br>
                <div class="form-group">
                    {{ form_widget(form.send, {'label': "Загрузить файл", 'attr' : { 'class': 'btn btn-primary' }}) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
